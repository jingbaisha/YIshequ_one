<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="@dimen/x489"
        android:layout_height="@dimen/y412"
        android:orientation="vertical">

        <ListView
            android:scrollbars="none"
            android:layout_above="@+id/lin_que_quxiao"
            android:id="@+id/lv_dialog_a"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:id="@+id/lin_que_quxiao"
            android:layout_marginBottom="@dimen/y30"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/y60"
                android:background="@drawable/yuan_blue"
                android:text="@string/confirm"
                android:textColor="@color/white" />

            <Button
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/y60"
                android:layout_marginLeft="@dimen/x27"
                android:background="@drawable/yuan_blue"
                android:text="@string/cancel"
                android:textColor="@color/white" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>