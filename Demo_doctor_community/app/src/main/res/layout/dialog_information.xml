<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="@dimen/x489"
        android:layout_height="@dimen/y344">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="确定要删除此条信息吗?"
                android:textSize="14.5sp"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/x29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="@dimen/y52"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/but_ok"
                android:text="@string/confirm"
                android:textColor="@color/white"
                android:background="@drawable/yuan_blue_a"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/y60" />
            <Button
                android:text="@string/cancel"
                android:id="@+id/bt_quxiao"
                android:textColor="@color/white"
                android:layout_marginLeft="@dimen/x27"
                android:background="@drawable/yuan_gray_a"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/y60" />
        </LinearLayout>
    </LinearLayout>



</LinearLayout>