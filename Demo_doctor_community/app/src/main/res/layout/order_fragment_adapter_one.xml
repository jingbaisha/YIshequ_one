<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray_add_a"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y218">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_dong_zhuantai"
                android:layout_marginLeft="@dimen/x26"
                android:text="服务中"
                android:textSize="10.5sp"
                android:layout_marginTop="@dimen/y5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="@dimen/x127"
                android:layout_height="@dimen/y127"
                android:layout_gravity="center"
                android:layout_margin="@dimen/x4">

                <ImageView
                    android:layout_marginTop="@dimen/y17"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/x10"
                    android:src="@mipmap/ic_launcher" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:orientation="vertical">

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y25"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_name"
                    android:textSize="13.5sp"
                    android:textColor="@color/userblack"
                    android:layout_width="@dimen/x112"
                    android:layout_height="wrap_content"
                    android:text="王小波" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y25">

                <TextView
                    android:id="@+id/tv_doctor"
                    android:textSize="10.5sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="广州市妇幼院" />

                <Button
                    android:id="@+id/but_dong_zhuangtai"
                    android:textColor="@color/white"
                    android:text="去评价"
                    android:textSize="10.5sp"
                    android:visibility="gone"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/x20"
                    android:background="@drawable/yuan_blue_a"
                    android:layout_width="@dimen/x114"
                    android:layout_height="@dimen/y60" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
    <View
        android:background="@color/textblack9"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>

</LinearLayout>