<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:landptf="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_add_a">

    <LinearLayout
        android:id="@id/title_fragment_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/e_ghfwdx_45" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/y630"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x80"
            android:layout_weight="1"
            android:gravity="center">

            <com.fanwang.demo_doctor_community.custom.ButtonM
                android:id="@+id/bt_a"
                android:layout_width="@dimen/x116"
                android:layout_height="@dimen/y116"
                android:gravity="center"
                android:text="父亲"
                android:textSize="10sp"
                landptf:backColor="@color/white"
                landptf:fillet="true"
                landptf:shape="oval"
                landptf:textColor="@color/userblack"
                landptf:textColorPress="#696969" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <com.fanwang.demo_doctor_community.custom.ButtonM
                android:layout_width="@dimen/x116"
                android:layout_height="@dimen/y116"
                android:gravity="center"
                android:text="父亲"
                android:textSize="10sp"
                landptf:backColor="@color/white"
                landptf:fillet="true"
                landptf:shape="oval"
                landptf:textColor="@color/userblack"
                landptf:textColorPress="#696969" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/x70"
            android:layout_weight="1"
            android:gravity="center">

            <com.fanwang.demo_doctor_community.custom.ButtonM
                android:layout_width="@dimen/x116"
                android:layout_height="@dimen/y116"
                android:gravity="center"
                android:text="父亲"
                android:textSize="10sp"
                landptf:backColor="@color/white"
                landptf:fillet="true"
                landptf:shape="oval"
                landptf:textColor="@color/userblack"
                landptf:textColorPress="#696969" />
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x190"
        android:layout_marginTop="@dimen/y300"
        android:background="@drawable/e_ghfwdx_44" />

    <com.fanwang.demo_doctor_community.custom.ButtonM
        android:layout_width="@dimen/x116"
        android:layout_height="@dimen/y116"
        android:layout_marginLeft="@dimen/x130"
        android:layout_marginTop="@dimen/y280"
        android:gravity="center"
        android:text="父亲"
        android:textSize="10sp"
        landptf:backColor="@color/white"
        landptf:fillet="true"
        landptf:shape="oval"
        landptf:textColor="@color/userblack"
        landptf:textColorPress="#696969" />

    <com.fanwang.demo_doctor_community.custom.ButtonM
        android:layout_width="@dimen/x116"
        android:layout_height="@dimen/y116"
        android:layout_marginLeft="@dimen/x300"
        android:layout_marginTop="@dimen/y280"
        android:gravity="center"
        android:text="父亲"
        android:textSize="10sp"
        landptf:backColor="@color/white"
        landptf:fillet="true"
        landptf:shape="oval"
        landptf:textColor="@color/userblack"
        landptf:textColorPress="#696969" />

    <com.fanwang.demo_doctor_community.custom.ButtonM
        android:layout_width="@dimen/x116"
        android:layout_height="@dimen/y116"
        android:layout_marginLeft="@dimen/x390"
        android:layout_marginTop="@dimen/y460"
        android:gravity="center"
        android:text="父亲"
        android:textSize="10sp"
        landptf:backColor="@color/white"
        landptf:fillet="true"
        landptf:shape="oval"
        landptf:textColor="@color/userblack"
        landptf:textColorPress="#696969" />

    <Button
        android:id="@+id/login_tijiao"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/yuan_blue"
        android:gravity="center"
        android:text="确定选择"
        android:textColor="@color/white"
        android:textSize="15sp" />
</RelativeLayout>