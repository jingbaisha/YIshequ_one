<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/title_fragment_bg"
    android:layout_width="match_parent"
    android:layout_height="45dp"
    android:background="@color/title"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/title_left_layout"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:minWidth="50dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/title_left_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/yy_04" />

        <TextView
            android:id="@+id/title_left_text"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:visibility="invisible" />
    </LinearLayout>

    <TextView
        android:id="@+id/title_content_show"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="17sp" />

    <LinearLayout
        android:id="@+id/title_right_layout"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:minWidth="50dp"

        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/title_right_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:padding="13dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/title_right_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:textColor="@color/textblack"
            android:textSize="17sp"
            android:visibility="invisible" />
    </LinearLayout>

</LinearLayout>