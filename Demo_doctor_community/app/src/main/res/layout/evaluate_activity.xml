<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ratingbar="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/gray_add_a"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@id/title_fragment_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/x36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="服务态度"
                android:textColor="@color/userblack"
                android:layout_marginLeft="@dimen/x30"
                android:textSize="13.5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.fanwang.demo_doctor_community.custom.StarBar
                android:id="@+id/star_doctor"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x26"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x140"
                ratingbar:starDistance="5dp"
                ratingbar:starEmpty="@drawable/aa_109"
                ratingbar:starFill="@drawable/aa_110"
                ratingbar:starSize="12dp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/x36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="服务态度"
                android:textColor="@color/userblack"
                android:layout_marginLeft="@dimen/x30"
                android:textSize="13.5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.fanwang.demo_doctor_community.custom.StarBar
                android:id="@+id/st_a"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x26"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x140"
                ratingbar:starDistance="5dp"
                ratingbar:starEmpty="@drawable/aa_109"
                ratingbar:starFill="@drawable/aa_110"
                ratingbar:starSize="12dp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/x36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="服务态度"
                android:layout_marginLeft="@dimen/x30"
                android:textSize="13.5sp"
                android:textColor="@color/userblack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.fanwang.demo_doctor_community.custom.StarBar
                android:id="@+id/st_b"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/x26"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x140"
                ratingbar:starDistance="5dp"
                ratingbar:starEmpty="@drawable/aa_109"
                ratingbar:starFill="@drawable/aa_110"
                ratingbar:starSize="12dp" />

        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_marginTop="@dimen/x36"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="评价"
                android:textColor="@color/userblack"
                android:layout_marginLeft="@dimen/x30"
                android:textSize="13.5sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <EditText
                android:background="@drawable/yuan_white"
                android:hint="输入评价内容"
                android:gravity="top"
                android:textSize="10.5sp"
                android:layout_gravity="center"
                android:layout_width="@dimen/x560"
                android:layout_height="@dimen/y260" />
            <TextView
                android:text="请勿超过100字"
                android:textSize="10.5sp"
                android:gravity="right"
                android:textColor="@color/red"
                android:layout_marginRight="@dimen/x100"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/login_tijiao"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/yuan_blue"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="提交"
        android:textColor="@color/white"
        android:textSize="15sp" />
</RelativeLayout>