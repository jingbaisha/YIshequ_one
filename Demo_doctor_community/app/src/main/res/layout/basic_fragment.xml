<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/gray_add_a"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="@dimen/x20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="所在医院"
            android:textColor="@color/textblack9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="中医院"
            android:textColor="@color/userblack"
            android:layout_marginLeft="@dimen/x70"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <!--第二部分-->
    <LinearLayout
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x20"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:text="科室"
                android:textColor="@color/textblack9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="呼吸内科"
                android:textColor="@color/userblack"
                android:layout_marginLeft="@dimen/x70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <TextView
                android:text="级别"
                android:textColor="@color/textblack9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="护士"
                android:textColor="@color/userblack"
                android:layout_marginLeft="@dimen/x70"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

    <!--第三部分-->
    <LinearLayout
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x40"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:text="工作证"
                android:textColor="@color/textblack9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_one"
                android:layout_marginTop="@dimen/y30"
                android:background="@drawable/ysxq_05"
                android:layout_width="@dimen/y290"
                android:layout_height="@dimen/y160" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:text="工作证"
                android:textColor="@color/textblack9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:id="@+id/iv_two"
                android:layout_marginTop="@dimen/y30"
                android:background="@drawable/ysxq_05"
                android:layout_width="@dimen/y290"
                android:layout_height="@dimen/y160" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>